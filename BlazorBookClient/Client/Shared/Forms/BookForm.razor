

<div class="border">
    <div class="card-header text-center">
        <h1>Book Form</h1>
    </div>
    <div class="card-body">
        <EditForm Model="Book">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="form-group">
                <label for="Title" class="form-label">Title</label>
                <InputText @bind-Value="Book.Title" class="form-control" placeholder="Title" />
                <ValidationMessage For="@(() => Book.Title)" />
            </div>
            <div class="form-group">
                <label for="ISBN" class="form-label">ISBN</label>
                <InputText @bind-Value="Book.ISBN" class="form-control" placeholder="ISBN" />
                <ValidationMessage For="@(() => Book.ISBN)" />
            </div>
            <div class="form-group">
                <label for="Price" class="form-label">Price</label>
                <InputNumber @bind-Value="Book.Price" class="form-control" placeholder="Price" />
                <ValidationMessage For="@(() => Book.Price)" />
            </div>
            <div class="form-group">
                <label for="DateOfPublication" class="form-label">Publication Date</label>
                <InputDate @bind-Value="Book.DateOfPublication" class="form-control" placeholder="Publication Date" />
                <ValidationMessage For="@(() => Book.DateOfPublication)" />
            </div>
            <div class="form-group">
                <label for="CategoryID" class="form-label">Category</label>
                <CustomInputSelect @bind-Value="Book.CategoryID" class="form-control">
                    <option>Select Category</option>
                    @foreach (var category in Categories)
                    {
                        <option value="@category.CategoryID">@category.CategoryName</option>
                    }
                </CustomInputSelect>
            </div>
            <div class="form-group">
                <label for="PublisherID" class="form-label">Publisher</label>
                <CustomInputSelect @bind-Value="Book.PublisherID" class="form-control">
                    <option>Select Publisher</option>
                    @foreach (var publisher in Publishers)
                    {
                        <option value="@publisher.PublisherID">@publisher.PublisherName</option>
                    }
                </CustomInputSelect>
            </div>
        </EditForm>
    </div>
    <div class="card-footer">
        <div class="form-group">
            <button type="button" @onclick="UpsertBook" class="btn btn-outline-success btn-block" style="font-weight: bold">@UpsertButton</button>
            <button type="button" @onclick="CancelMethod" class="btn btn-outline-primary btn-block" style="font-weight: bold">@CancelButton</button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public BookView Book { get; set; } = new();

    [Parameter]
    public List<CategoryView> Categories { get; set; } = new();

    [Parameter]
    public List<PublisherView> Publishers { get; set; } = new();

    [Parameter]
    public EventCallback UpsertBook { get; set; }

    [Parameter]
    public EventCallback CancelMethod { get; set; }

    [Parameter]
    public string UpsertButton { get; set; }

    [Parameter]
    public string CancelButton { get; set; }
}